import tkinter as tk
from tkinter import font, messagebox
import random

class GuessingGame:
def **init**(self, root):
self.root = root
self.root.title(‚ÄúNumber Guessing Game‚Äù)
self.root.geometry(‚Äú500x600‚Äù)
self.root.resizable(False, False)
self.root.configure(bg=‚Äù#2c3e50‚Äù)

```
    self.min_num = 1
    self.max_num = 100
    self.secret_number = random.randint(self.min_num, self.max_num)
    self.attempts = 0
    self.max_attempts = 10
    
    self.create_widgets()

def create_widgets(self):
    # Title
    title_font = font.Font(family="Arial", size=28, weight="bold")
    title = tk.Label(
        self.root,
        text="üéØ Guessing Game",
        font=title_font,
        bg="#2c3e50",
        fg="#ecf0f1"
    )
    title.pack(pady=30)
    
    # Instructions
    instructions_font = font.Font(family="Arial", size=12)
    instructions = tk.Label(
        self.root,
        text=f"Guess a number between {self.min_num} and {self.max_num}",
        font=instructions_font,
        bg="#2c3e50",
        fg="#bdc3c7"
    )
    instructions.pack(pady=10)
    
    # Attempts counter
    self.attempts_label = tk.Label(
        self.root,
        text=f"Attempts: {self.attempts}/{self.max_attempts}",
        font=instructions_font,
        bg="#2c3e50",
        fg="#e74c3c"
    )
    self.attempts_label.pack(pady=5)
    
    # Input frame
    input_frame = tk.Frame(self.root, bg="#2c3e50")
    input_frame.pack(pady=20)
    
    entry_font = font.Font(family="Arial", size=18)
    self.entry = tk.Entry(
        input_frame,
        font=entry_font,
        width=10,
        justify="center",
        bg="#34495e",
        fg="white",
        insertbackground="white",
        relief="flat",
        bd=5
    )
    self.entry.pack(side="left", padx=10)
    self.entry.bind("<Return>", lambda e: self.make_guess())
    
    # Guess button
    button_font = font.Font(family="Arial", size=14, weight="bold")
    guess_btn = tk.Button(
        input_frame,
        text="Guess",
        font=button_font,
        bg="#3498db",
        fg="white",
        activebackground="#2980b9",
        activeforeground="white",
        cursor="hand2",
        relief="flat",
        padx=20,
        pady=10,
        command=self.make_guess
    )
    guess_btn.pack(side="left", padx=10)
    
    # Feedback frame
    feedback_frame = tk.Frame(self.root, bg="#34495e", relief="flat", bd=0)
    feedback_frame.pack(pady=20, padx=40, fill="both", expand=True)
    
    feedback_font = font.Font(family="Arial", size=16, weight="bold")
    self.feedback_label = tk.Label(
        feedback_frame,
        text="Make your first guess!",
        font=feedback_font,
        bg="#34495e",
        fg="#f39c12",
        wraplength=400,
        justify="center"
    )
    self.feedback_label.pack(expand=True, pady=40)
    
    # History
    history_label = tk.Label(
        self.root,
        text="Your Guesses:",
        font=instructions_font,
        bg="#2c3e50",
        fg="#bdc3c7"
    )
    history_label.pack()
    
    self.history_text = tk.Text(
        self.root,
        height=4,
        width=40,
        font=font.Font(family="Arial", size=11),
        bg="#34495e",
        fg="#ecf0f1",
        relief="flat",
        state="disabled"
    )
    self.history_text.pack(pady=10)
    
    # New game button
    new_game_btn = tk.Button(
        self.root,
        text="New Game",
        font=button_font,
        bg="#27ae60",
        fg="white",
        activebackground="#229954",
        activeforeground="white",
        cursor="hand2",
        relief="flat",
        padx=20,
        pady=10,
        command=self.new_game
    )
    new_game_btn.pack(pady=10)

def make_guess(self):
    if self.attempts >= self.max_attempts:
        return
    
    try:
        guess = int(self.entry.get())
        
        if guess < self.min_num or guess > self.max_num:
            self.feedback_label.config(
                text=f"Please enter a number between {self.min_num} and {self.max_num}!",
                fg="#e74c3c"
            )
            return
        
        self.attempts += 1
        self.attempts_label.config(text=f"Attempts: {self.attempts}/{self.max_attempts}")
        
        # Add to history
        self.history_text.config(state="normal")
        self.history_text.insert("end", f"{guess} ")
        self.history_text.config(state="disabled")
        
        if guess == self.secret_number:
            self.feedback_label.config(
                text=f"üéâ Correct! You won in {self.attempts} attempts!",
                fg="#27ae60"
            )
            self.entry.config(state="disabled")
            messagebox.showinfo("Winner!", f"Congratulations! You guessed the number in {self.attempts} attempts!")
        elif self.attempts >= self.max_attempts:
            self.feedback_label.config(
                text=f"Game Over! The number was {self.secret_number}",
                fg="#e74c3c"
            )
            self.entry.config(state="disabled")
        elif guess < self.secret_number:
            difference = self.secret_number - guess
            if difference <= 5:
                hint = "Very close! Go higher üî•"
            elif difference <= 15:
                hint = "Close! Go higher ‚¨ÜÔ∏è"
            else:
                hint = "Too low! Go much higher ‚¨ÜÔ∏è‚¨ÜÔ∏è"
            self.feedback_label.config(text=hint, fg="#f39c12")
        else:
            difference = guess - self.secret_number
            if difference <= 5:
                hint = "Very close! Go lower üî•"
            elif difference <= 15:
                hint = "Close! Go lower ‚¨áÔ∏è"
            else:
                hint = "Too high! Go much lower ‚¨áÔ∏è‚¨áÔ∏è"
            self.feedback_label.config(text=hint, fg="#f39c12")
        
        self.entry.delete(0, tk.END)
        
    except ValueError:
        self.feedback_label.config(
            text="Please enter a valid number!",
            fg="#e74c3c"
        )

def new_game(self):
    self.secret_number = random.randint(self.min_num, self.max_num)
    self.attempts = 0
    self.attempts_label.config(text=f"Attempts: {self.attempts}/{self.max_attempts}")
    self.feedback_label.config(
        text="Make your first guess!",
        fg="#f39c12"
    )
    self.entry.config(state="normal")
    self.entry.delete(0, tk.END)
    self.history_text.config(state="normal")
    self.history_text.delete(1.0, tk.END)
    self.history_text.config(state="disabled")
```

if **name** == ‚Äú**main**‚Äù:
root = tk.Tk()
game = GuessingGame(root)
root.mainloop()
